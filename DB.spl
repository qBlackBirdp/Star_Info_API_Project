-- 데이터베이스 삭제 및 생성
DROP DATABASE IF EXISTS `STAR_INFO_API_DB`;
CREATE DATABASE `STAR_INFO_API_DB`;
USE `STAR_INFO_API_DB`;

-- 행성 정보 테이블 생성
CREATE TABLE planet_info (
                             planet_code INT PRIMARY KEY,
                             planet_name VARCHAR(255) NOT NULL
);

